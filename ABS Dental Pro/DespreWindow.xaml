<Window x:Class="ABS_Dental_Pro.DespreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ABS_Dental_Pro"
        mc:Ignorable="d"
        Title="Despre..." Height="300" Width="300" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/Images/tooth.png">
    <StackPanel>
        <TextBlock Text="ABS Dental Pro, v. 1.4" FontSize="16" HorizontalAlignment="Center" Margin="0,20,0,0" ></TextBlock>
        <TextBlock Text="2016-2018" FontSize="14" Margin="0,20,0,0" HorizontalAlignment="Center"></TextBlock>
        <Image Source="/Images/tooth_blue.png" RenderTransformOrigin="0.5,0.5" Width="60" Margin="0,30,0,0"/>
        <Button Content="OK" Margin="110,30,110,0" FontSize="14" IsDefault="True" Click="DespreWindowOKClick" Height="35"/>
    </StackPanel>
</Window>
